<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">
<data>
    <import type="android.view.View"/>

    <variable
            name="user"
            type="com.example.richard.gate_app.ViewModelClass"
    />
</data>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
            tools:context=".FriendsListFragment">

    <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
                                        xmlns:app="http://schemas.android.com/apk/res-auto"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="5dp"
                                        app:cardCornerRadius="2dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp">

            <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="4dp" />

            <TextView
                    android:id="@+id/friend_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/imageView"
                    android:text="Line 1"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" android:layout_marginTop="0dp" android:layout_marginStart="5dp"/>

            <TextView
                    android:id="@+id/friend_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/friend_username"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/imageView"
                    android:text="Line 2"
                    android:textSize="15sp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
</layout>